# Backend environment example

# Server
PORT=3000

# Database (DigitalOcean Managed DB compatible)
DB_HOST=your-db-hostname
DB_PORT=25060
DB_USER=your-db-user
DB_PASS=your-db-password
DB_NAME=luisardito_shop
# Enable SSL for managed DBs (true/false)
DB_SSL=true
# Set to true only if your CA is properly configured; false skips verification
DB_SSL_REJECT_UNAUTHORIZED=false

# Auth
JWT_SECRET=super-secret-jwt

# Kick OAuth (if applicable)
KICK_CLIENT_ID=
KICK_CLIENT_SECRET=
KICK_REDIRECT_URI=


# Optional DB connection wait settings
# DB_CONNECT_RETRIES=30
# DB_CONNECT_RETRY_DELAY_MS=2000
